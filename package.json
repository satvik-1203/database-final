{
  "name": "distributed-transaction-simulator",
  "version": "1.0.0",
  "description": "A distributed transaction simulator implementing snapshot isolation with serializability",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "node scripts/run-tests.mjs",
    "input-test": "npm run build && node dist/interactive.js",
    "run-file": "npm run build && node dist/index.js",
    "test-file": "node scripts/run-file.mjs",
    "docker:run": "bash scripts/docker-run-inline.sh",
    "reprozip:pack": "bash scripts/reprozip-pack-docker.sh",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "database",
    "distributed-systems",
    "transactions",
    "snapshot-isolation",
    "concurrency-control"
  ],
  "author": "Satvik Seeram and Mahitha Bushap",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.9.3"
  }
}
